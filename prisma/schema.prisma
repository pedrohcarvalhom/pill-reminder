datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
}

model Pacient {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  Pill        Pill[]
}

model UserPacient {
  id        Int
  userId    Int
  pacientId Int

  @@id([userId, pacientId])
}

model Pill {
  id          Int     @id @default(autoincrement())
  name        String
  quantity    Int
  measure     String
  when        String?
  description String?
  pacient     Pacient @relation(fields: [pacientId], references: [id])
  pacientId   Int
  Hour        Hour[]
}

model Hour {
  id        Int      @id @default(autoincrement())
  time      String
  pillId    Int
  pill      Pill     @relation(fields: [pillId], references: [id])
  checked   Boolean
  checkedAt DateTime
}
